@{
}



@model IEnumerable<Instructor>;

<div>Instructor List</div>
<a class="btn btn-primary" asp-action="AddInstructor">Add Instructor</a>


<table class="table table-dark">

    <tr>
        <th colspan="8">Instructor</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Email</td>
        <td>Tenured</td>
        <td>Details</td>
        <td>Edit</td>
        <td>Delete</td>


    </tr>
    @foreach (var instructor in Model)
    {

       
        <tr>
        
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td>@instructor.Email</td>
            <td>@instructor.IsTenured</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@instructor.Id">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@instructor.Id">Delete</a></td>

        </tr>
    }
</table>

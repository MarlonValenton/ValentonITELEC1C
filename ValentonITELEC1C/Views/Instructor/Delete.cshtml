@model Instructor;

<h1>Are you sure you want to delete this student?</h1>
<form action="Delete" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Tenured</label>
        <select asp-for="IsTenured" asp-items="Html.GetEnumSelectList(typeof(IsTenured))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <button asp-action="Delete" class="btn btn-danger">Delete</button>
    <button type="button" onclick="history.back()" class="btn">Cancel</button>
</form>

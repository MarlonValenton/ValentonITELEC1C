@{
}



@model IEnumerable<Student>;

<div>Student List</div>
<a class="btn btn-primary" asp-action="AddStudent">Add Student</a>

<table class="table table-dark">

    <tr>
        <th colspan="9">Student</th>
    </tr>

    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Course</td>
        <td>Date Enrolled</td>
        <td>Email</td>
        <td>GPA</td>
        <td>Details</td>
        <td>Edit</td>
        <td>Delete</td>


    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.DateEnrolled</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@student.Id">Delete</a></td>
        </tr>
    }
</table>
